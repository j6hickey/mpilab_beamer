  \begin{beamercolorbox}[wd=\paperwidth,ht=30pt]{frametitle}%
  \raisebox{+5pt}{\hskip+9pt \Large\insertframetitle}
  \hfill
  \includegraphics[height=24pt]{identity/universityofwaterloo_white.pdf}
  \vskip2pt
  \end{beamercolorbox}%
  \vskip-17pt
\begin{beamercolorbox}[wd=\paperwidth,ht=2pt]{separation line}
\end{beamercolorbox}
}

\setbeamerfont{structure}{series=\bfseries}
\setbeamertemplate{navigation symbols}{}
